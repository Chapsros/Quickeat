{% extends 'base.html.twig' %}

{% block title %}Modification compte | QuickEat{% endblock %}

{% block body %}
    <div class="container mt-3 mb-3">
        <form method="post" action="" enctype="multipart/form-data">
            <hr>
            <div class="d-flex justify-content-center">
                <h1>Modifications</h1>
            </div>
            <hr>
            {{ form_row(formaccount._token) }}
            {{ form_row(formaccount.email) }}
            {{ form_row(formaccount.phoneNumber) }}
            {{ form_row(formaccount.localisation.country) }}
            {{ form_row(formaccount.localisation.number) }}
            {{ form_row(formaccount.localisation.address) }}
            {{ form_row(formaccount.localisation.city) }}
            {{ form_row(formaccount.localisation.postalCode) }}
            {{ form_row(formaccount.imageFile) }}
            <div class="col d-flex justify-content-end">
                <button class="btn btn-primary">Enregistrer modifications</button>
            </div>
        </form>
    </div>
{% endblock %}
