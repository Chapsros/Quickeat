{% extends 'base.html.twig' %}

{% block title %}Restaurant | QuickEat{% endblock %}

{% block body %}
<div class="container mt-4 mb-4">
    <hr>
    <div class="d-flex justify-content-center">
    <h1>Mes Restaurants</h1>
    </div>
    <hr>
    {% for restaurant in restaurants %}
    <h4>{{ restaurant.name }} :</h4>
    <hr>
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <p>Prénom : {{app.User.name }}</p>
                <p>Nom : {{app.User.firstname }}</p>
                <p>Email : {{app.User.email }}</p>
            </div>
            <div class="col-sm">
                <p>N° de l'adresse : {{app.User.localisation.number }}</p>
                <p>Adresse : {{app.User.localisation.address }}</p>
                <p>Ville : {{app.User.localisation.city }}</p>
                <p>Code postal : {{app.User.localisation.Postalcode }}</p>
                <p>Pays: {{app.User.localisation.country }}</p>
                <a href="#" class="btn btn-primary mr-2">Uploads</a>
                <a href="/plat/ {{ restaurant.id }}" class="btn btn-primary mr-2">Ajouter des plats</a>
            </div>
        </div>
    </div>
    <hr>
    {% endfor %}

    <div class="row mb-5 mt-4">
        <div class="col d-flex justify-content-end">
            <a href="{{ path('new') }}" class="btn btn-primary mr-2">Nouveau restaurant</a>
        </div>
    </div>

</div>
{% endblock %}
