        <form method="post" action="" enctype="multipart/form-data">
            <hr>
            <div class="d-flex justify-content-center">
                <h1>Modifications</h1>
            </div>
            <hr>
            {{ form_row(formlogo._token) }}
            {{ form_row(formlogo.imageFile) }}
